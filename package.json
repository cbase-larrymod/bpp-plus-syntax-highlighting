{
    "name": "bpp-plus-basic-v2-syntax",
    "displayName": "BPP+ BASIC v2 Syntax Highlighting",
    "description": "Syntax highlighting for Commodore 64 BASIC v2 and BPP+",
    "version": "0.0.3",
    "publisher": "Hakan Persson Tence",
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": ["Programming Languages"],
    "contributes": {
        "configurationDefaults": {
            "[bpp+basicv2]": {
                "editor.snippetSuggestions": "top"
            }
        },
        "languages": [
            {
                "id": "bpp+basicv2",
                "aliases": ["BPP+ BASIC v2", "bpp+basicv2"],
                "extensions": [".bpp"],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bpp+basicv2",
                "scopeName": "source.bpp+basicv2",
                "path": "./syntaxes/bpp-plus-basic-v2.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "bpp+basicv2",
                "path": "./snippets/bpp-plus-basic-v2.json"
            }
        ]
    }
}
