{
    "name": "bpp-plus-basic-v2-syntax",
    "displayName": "BPP+ BASIC v2 Syntax Highlighting",
    "description": "Syntax highlighting for BPP+ preprocessor and Commodore 64 BASIC v2 code",
    "version": "0.0.5",
    "publisher": "Skyhawk/Triad & Larry/R.O.L.E.",
    "repository": {
        "type": "git",
        "url": "https://github.com/hakkanpersson/bpp-plus.git"
        },
        "engines": {
            "vscode": "^1.105.0"
        },
        "categories": ["Programming Languages"],
        "scripts": {
            "package": "mkdir -p dist && vsce package -o dist/"
        },
        "contributes": {
            "configurationDefaults": {
                "[bpp+basicv2]": {
                    "editor.snippetSuggestions": "top"
                }
            },
        "languages": [
            {
                "id": "bpp+basicv2",
                "aliases": ["BPP+ BASIC v2", "bpp+basicv2"],
                "extensions": [".bpp"],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bpp+basicv2",
                "scopeName": "source.bpp+basicv2",
                "path": "./syntaxes/bpp-plus-basic-v2.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "bpp+basicv2",
                "path": "./snippets/bpp-plus-basic-v2.json"
            }
        ]
    }
}
